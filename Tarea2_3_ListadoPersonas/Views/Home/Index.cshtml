
@{
    Layout = null;
}

    <div>
        <h1>Listado de Personas</h1>
        @{
            var grid = new WebGrid(Model, defaultSort: "Nombres");
        }

        @grid.GetHtml(columns: grid.Columns(
            grid.Column("Nombres", header: "Nombres"),
            grid.Column("Apellidos", header: "Apellidos"),
            grid.Column("Sexo", header: "Sexo"),
            grid.Column("Edad", header: "Edad"),
            grid.Column("Ocupacion", header: "Ocupación")
        ));

    </div>
